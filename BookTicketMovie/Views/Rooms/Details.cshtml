@model BookTicketMovie.Models.Room

@{
    ViewData["Title"] = "Details";
}

<h1>Details</h1>

<div>
    <h4>Room</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.NumberRoom)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.NumberRoom)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.AmountChair)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.AmountChair)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.status)
        </dt>

        @if (Model.status == true)
        {
            <dd class="col-sm-10">Đang chiếu</dd>
        }
        @if (Model.status == false)
        {
            <dd class="col-sm-10">Đang trống</dd>
        }

    </dl>
</div>
<div>
    <a asp-action="Edit" asp-route-id="@Model?.Id">Edit</a> |
    <a asp-action="Index">Back to List</a>
</div>
